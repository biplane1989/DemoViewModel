<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_share_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share data between fragments" />

    <Button
        android:id="@+id/btn_save_instance_state"
        android:text="save instance state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="viewmodel factory"
        android:id="@+id/btn_viewmodel_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>